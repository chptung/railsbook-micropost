<h1>Microposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Status</th>
      <th>Publish At</th>
      <th>Published At</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%
      @microposts.where(:status => ['published', 'not_published' ]).each do |micropost|
    %>
    <%# @microposts.each do |micropost| %>
      <tr class="microposts">
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td class=<%= micropost.status %>><%= micropost.status %></td>
        <td><%= micropost.publish_at %></td>
        <td><%= micropost.published_at %></td>
        <td><%= micropost.created_at %></td>
        <td><%= link_to 'Show', micropost %></td>
